<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-success text-white text-center">
          <h2>Librarian Login</h2>
        </div>
        <div class="card-body">
          <%= form_for :librarian, url: librarian_session_path do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, value: 'librarian@example.com', autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, value: 'password', autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="actions text-center mt-4">
              <%= f.submit "Log in", class: 'btn btn-success btn-lg' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <div class="mt-3">
            <p><strong>Demo Credentials:</strong> librarian@example.com / password</p>
            <p><small>Note: This is a demo application running without a database.</small></p>
          </div>
          <div class="mt-2">
            <%= link_to "Back to Home", root_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
